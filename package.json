    "laravel-mix": "^2.1.14",
    "laravel-mix-purgecss": "^3.0.0",
    "laravel-mix-tailwind": "^0.1.0",
    "node-cmd": "^3.0.0",
    "on-build-webpack": "^0.1.0",
    "tailwindcss": "^0.6.6",
    "vue": "^2.5.17",
    "webpack-watch": "^0.2.0",
    "yargs": "^12.0.2"
  }
}
